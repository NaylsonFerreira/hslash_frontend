{
  "extends": [
    "eslint:recommended",
    "next",
    "prettier"
  ],
  "settings": {
    "next": {
      "rootDir": "src/"
    }
  },
  "rules": {
    "prefer-template": 1,
    "no-unused-vars": "off",
    "unused-imports/no-unused-imports": "error",
    "quotes": [
      "error",
      "single"
    ],
    "no-multiple-empty-lines": [
      "error",
      {
        "max": 2,
        "maxEOF": 0
      }
    ],
    "camelcase": [
      "error",
      {
        "ignoreDestructuring": true
      }
    ]
  },
  "plugins": [
    "unused-imports"
  ]
}